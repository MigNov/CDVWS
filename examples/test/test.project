# Hosting options
host.http = example.com
host.secure = example.com
host.certificate.dir = certs
host.certificate.root = rootcert.pem
host.certificate.private = server-key.private
host.certificate.public = server-key.pub
host.path.xmlrpc = /xmlrpc
host.path.rewriter = rewrite-rules.def

# Kerberos configuration
kerberos.keytab = krb5.keytab
kerberos.secure_path = /private
kerberos.realm = EXAMPLE.COM
kerberos.realm_basic = Example Realm

# GeoIP Database
geoip.enable = true
geoip.file = geoip/GeoLiteCity.dat
# Information to be exposed to the script, they are in GEOIP_* prefixed variables,
# e.g. COUNTRY is located in GEOIP_COUNTRY, CITY in GEOIP_CITY etc.
#geoip.expose = COUNTRY REGION CITY POSTAL_CODE LONGITUDE LATITUDE
geoip.expose = COUNTRY CITY LONGITUDE LATITUDE

# Project settings
project.name = Test project
project.administrator.name = Michal Novotny
project.administrator.email = mignov@gmail.com

# Project configuration
project.config.file = config
project.config.directory.definitions = definition
project.config.directory.scripts = scripts
project.config.directory.views = view
